
<link rel="stylesheet" href="/css/content.css">

<h2> Filme </h2>

<div id="popular-content">
    Recent adaugate
    <ul class="contentList">
        {{#if recentContent}}
            {{#each recentContent}}
                <li style="list-style: none;">
                    <a href="/content/viewContent/{{_id}}"> 
                        <img src="http://localhost:3000/content/thumbnail/{{thumbnail}}" width="200px" height="100px"> 
                    </a> 
                </li>
            {{/each}}
        {{/if}}
    </ul>
</div>  

<div id="popular-content">
    Populare in aceasta saptamana
    <ul class="contentList">
        {{#if popularityContent}}
            {{#each popularityContent}}
                <li style="list-style: none;">
                    <a href="/content/viewContent/{{_id}}"> 
