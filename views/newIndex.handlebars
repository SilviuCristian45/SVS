<div id="recommended-content">
    Recomandate pentru tine
    <ul class="contentList">
        {{#if contentRecomended}}
            {{#each contentRecomended}}
                <li style="list-style: none;">
                    <a href="/content/viewContent/{{_id}}"> 
                        <img src="http://localhost:3000/content/thumbnail/{{thumbnail}}" width="200px" height="100px"> 
                    </a> 
                </li>
            {{/each}}
        {{/if}}
    </ul>
</div>

{{#each categories}}
    Category : {{this.name}}
    <ul class="contentList">
        {{#if this.contentsObjects}}
            {{#each this.contentsObjects}} <!-- parcurgem obiectele de tip content-->
                {{#if this}}
                    <li style="list-style: none;">
                        <a href="/content/viewContent/{{this._id}}"> 
                            <img src="http://localhost:3000/content/thumbnail/{{this.thumbnail}}" width="200px" height="100px"> 
                        </a> 
                    </li>
                {{/if}}
            {{/each}}
        {{/if}}
    </ul>
{{/each}}


