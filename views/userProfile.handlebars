

<div class="container">
    <h1>Profilul userului curent </h1>

    <form action="/user/updateProfile" method="post">
        <!-- Name input -->
        <div class="form-outline mb-4">
            <input type="text" id="form4Example1" class="form-control" value="{{user.username}}" name="username" />
            <label class="form-label" for="form4Example1">Name</label>
        </div>

        <!-- Email -->
        <div class="form-outline mb-4">
            <input type="text" id="form4Example1" class="form-control" value="{{user.email}}" name="email" />
            <label class="form-label" for="form4Example1">Email</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="text" id="form4Example2" class="form-control" value="{{user.password}}" name="password"/>
            <label class="form-label" for="form4Example2">Password</label>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
</form>


</div>
