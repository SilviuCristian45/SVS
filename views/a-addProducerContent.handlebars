<div class="container" style="text-align: center;">
<!-- Setare producer pt un anumit content -->
    <form action="/admin/setProducerContent" method="post">
        <!-- alegere content --> 
        <label for="contentName">Content name</label>
        <select name="contentName"> 
        {{#each contents}}
            {{#if this.title}}
            <option value="{{this._id}}">{{this.title}}</option>
            {{/if}}
        {{/each}}
        </select> <br>
        <label for="producers">Producer</label>
        <!-- alegere produceri --> 
        <select name="producers"> 
        {{#each producers}}
            {{#if this.name}}
                <option value="{{this._id}}">{{this.name}}</option>
            {{/if}}
        {{/each}}
        </select> <br>  

        <input type="submit" value="set producer for content">
    </form>
</div>